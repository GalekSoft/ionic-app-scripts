{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es5",
    "noImplicitAny": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "src/**/*.spec.ts"
  ]
}
